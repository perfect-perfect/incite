<section>
    Welcome {{posts.[0].user.username}}
    <img src="{{posts.0.user.profileImage}}"> 
</section>
<section>
    <form id="avatar" method="POST" action="api/users/avatar" entype="multipart/form-data">
        <div>
            <label for="username">Update User Name</label>
            <input type="text" id="username" placeholder="{{posts.0.user.username}}">
        </div>
        <div>
            <label for="avatarImage">Upload Avatar Image</label>
            <input type="file" name="avatarImage" accept="image/*/"> 
            {{!-- <input type="file" name="avatarImage">  --}}
        </div>
        <button type="submit" class="btn">Upload Avatar</button>   
    </form>

</section>
<section>
    <h2>Ask A New Question</h2>
    <form class="new-post-form" method="POST" action="/api/posts" enctype="multipart/form-data">
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="title" />
        </div>
        <div>
            <label for="question">Question</label>
            <input id="question" name="question" />
        </div>
        <div>
            <label for="postImage">Upload Image</label>
            <input type="file" name="postImage" accept="image/*/">
        </div>
        <button type="submit" class="btn">Create</button>
    </form>

</section>

{{#if posts.length}}
<section>
    <h2>Your Questions</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Question</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}


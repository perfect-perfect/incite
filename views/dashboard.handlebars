<section class="dashboard-form">
    <div class="ask-question">
        <h2>Ask A New Question</h2>
    </div>

    <form class="new-post-form" method="POST" action="/api/posts" enctype="multipart/form-data">
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="title" />
        </div>
        <div>
            <label for="question">Question</label>
            {{!-- <input id="question" name="question" /> --}}
            <textarea id="question" name="question" style="width: 300px; height: 240px;"></textarea>
        </div>
        <div>
            <label for="postImage">Upload Image</label>
            <input type="file" name="postImage" accept="image/*/">
        </div>
        <button type="submit" class="create-btn">Create</button>
    </form>

</section>

{{#if posts.length}}
<section class="dashboard-posts">
    <div class="your-questions">
        <h2>Your Questions</h2>
    </div>
    
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <div class="edit-page">
                <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Question</a>
            </div>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}


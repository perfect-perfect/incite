<article class="edit-post">
    <div>
        <a href="/dashboard">&larr; Back to dashboard</a>
    </div>
    
    <div class="edit-post-header">
       <h2>
        Edit Post
        </h2> 
    </div>
    <form class="edit-post-form">
        {{!-- title is an editable form field --}}
        <div>
            <label for="title">Title:</label>
            <input name="post-title" type="text" class="edit-post-title" value="{{post.title}}" />
        </div>
        <div class = "post-text">
            <input name="post-question" type="text" class="edit-post-question" value="{{post.question}}" />
            {{!-- <span style="white-space: pre-wrap">{{post.question}}</span> --}}
        </div>
        <div>
            {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}}
            |
            <a href=="/post/{{post.id}}">{{post.answers.length}} {{format_plural "answer" post.answers.length}}</a>
        </div>
        <button type="submit" class="save-btn">Save post</button>
        {{#if post.answers.length}}
        <h4>If a question was answered, it can no longer be deleted</h4>
        {{else}}
        <button type="button" class="delete-post-btn">Delete post</button>
        {{/if}} 
    </form>
</article>
{{> answers post.answers}}

<script src="/javascript/edit-post.js"></script>
{{#if post.answers.length}}
<div></div>
{{else}}
<script src="/javascript/delete-post.js"></script>
{{/if}}

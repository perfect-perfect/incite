{{!-- 'post-info' partial and the 'post' object that was passed in to the single-post in the 'home-routes.js' --}}
{{> post-info post }}
{{!-- include the form and answers below --}}
{{!-- conditionally render answer form, only if there is a session open --}}
{{#if loggedIn}}
<form class="answer-form">
    <div>
        <textarea name="answer-body"></textarea>
    </div>

    <div>
        <button type="submit">add answer</button>
        <button type="button" class="upvote-btn">upvote</button>
    </div>
</form>
{{/if}}
{{> answers post.answers}}
{{#if loggedIn}}
<script src="/javascript/answer.js"></script>
<script src="/javascript/upvote.js"></script>
{{/if}}